<footer class="footer">
  <div class="footer__content-top page-width">
    {% if section.blocks.size > 0 %}
      <div class="footer__blocks-wrapper grid grid--1-col grid--2-col-tablet grid--4-col-desktop">
        {% for block in section.blocks %}
          <div class="footer__block" {{ block.shopify_attributes }}>
            {% case block.type %}
              {% when 'text' %}
                <h2 class="footer__block-heading h4">{{ block.settings.heading }}</h2>
                <div class="footer__block-text rte">{{ block.settings.text }}</div>
              {% when 'link_list' %}
                <h2 class="footer__block-heading h4">{{ block.settings.heading }}</h2>
                <ul class="footer__list list-unstyled">
                  {% for link in block.settings.links %}
                    <li class="footer__list-item">
                      <a href="{{ link.url }}" class="footer__link link--text">
                        {{ link.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
            {% endcase %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>

  <div class="footer__content-bottom">
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__copyright">
        <small class="copyright__content">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </small>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "About"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share store details, promotions, or brand content with your customers.</p>"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick links"
        }
      ]
    }
  ]
}
{% endschema %}
